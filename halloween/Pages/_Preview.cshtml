

@model PreviewModel

@*PREVIEW PAGE ---START *@
<div class=" mypreviewpage">
    <h2>PLEASE REVIEW YOUR EGREETING!</h2>
    <div class="form-group row">
        <label asp-for="bridgeGreetings.recipientname " class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.Raw(Model.bridgeGreetings.recipientname)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="bridgeGreetings.recipientemail" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.Raw(Model.bridgeGreetings.recipientemail)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="bridgeGreetings.subject" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.Raw(Model.bridgeGreetings.subject)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="bridgeGreetings.mesgfromuser" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.Raw(Model.bridgeGreetings.mesgfromuser)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="bridgeGreetings.sendersname" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.Raw(Model.bridgeGreetings.sendersname)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="bridgeGreetings.sendersemail" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.Raw(Model.bridgeGreetings.sendersemail)
        </div>
    </div>

    @*EDIT & CONFIRM BUTTONS START *@

    <div class="has-error">@Model.Message</div>

    <form method="post">
        <div class="form-group row">
            <div class="col-sm-10">
                <input type="hidden" asp-for="bridgeGreetings.ID" />
                <input type="submit" class="btn btn-primary" value="Send it, baby!" />
            </div>
        </div>
    </form>


    @*EDIT & CONFIRM BUTTONS END *@
</div> @*PREVIEW PAGE --- END *@
